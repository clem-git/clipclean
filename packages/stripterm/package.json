{
  "name": "clipclean",
  "version": "1.0.0",
  "description": "Clean Claude Code / Codex terminal output",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "bin": {
    "clipclean": "./dist/cli.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "keywords": [
    "claude",
    "terminal",
    "clean",
    "strip",
    "ansi",
    "codex",
    "llm"
  ],
  "license": "MIT",
  "devDependencies": {
    "tsup": "^8.3.0",
    "vitest": "^2.1.0"
  },
  "dependencies": {
    "clipboardy": "^4.0.0"
  }
}
